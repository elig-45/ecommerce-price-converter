{
  "manifest_version": 3,
  "name": "ecommerce-price-converter",
  "version": "0.1.0",
  "description": "Convert ecommerce prices into your chosen currency on supported sites.",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background/service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "core/price_parser.js",
        "core/price_converter.js",
        "core/detectors.js",
        "core/rules_engine.js",
        "core/storage.js",
        "content/observer.js",
        "content/adapters/alza.js",
        "content/adapters/amazon.js",
        "content/generic.js",
        "content/bridge.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Price Converter"
  }
}
